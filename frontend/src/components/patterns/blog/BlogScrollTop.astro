<button id="scrollto-top-button">
  <img src="../up.svg" width="30" height="30" alt="up arrow" />
</button>

<style>
  button {
    position: fixed;
    bottom: 3%;
    right: 5%;
    border-radius: 100%;
    height: 40px;
    width: 40px;
    color: var(--color__deep-purple--200);
    outline: none;
    border: none;
    background: none;
    border: 1px solid var(--color__deep-purple--200);
    display: flex;
    justify-content: space-around;
    align-items: center;
    backdrop-filter: blur(10px);
  }

  button:hover {
    cursor: pointer;
  }
</style>

<script>
  const scrollToTopButton = document.getElementById('scrollto-top-button')
  scrollToTopButton.addEventListener('click', () => {
    document.body.scrollTop = document.documentElement.scrollTop = 0
  })
</script>
