---
import NavBar from "./NavBar.astro"
import Link from "../elements/Link.astro"
import { Vars } from "../../script/vars"
---


<header>
    <Link href="/">
      <img width="100" src="../../../public/logo.png" />
    </Link>
    <NavBar width="400">
        <Link href="/pricing">Pricing</Link>
        <Link href="/docs">Docs</Link>
        <Link href="/blog">Blog</Link>
        <Link href="/contact-us">Contact Us</Link>
    </NavBar>
    <div>
        <Link href={Vars.app.url} variant="button" fill="outline" theme="default">Log in</Link>
        &nbsp;&nbsp;
        <Link href={Vars.app.url} variant="button" fill="solid" theme="default">Sign up</Link>
    </div>
</header>
<style>
    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: var(--site__padding) 0;
    }
</style>