---
import Card from "../container/Card.astro"
import Link from "../elements/Link.astro"

interface Props {
    quote: string;
	name: string;
    designation: string;
    website?: string;
    linkedin?: string;
    dpUrl?:string;
}

const { quote, name, designation } = Astro.props
---

<Card variant="testimonial">
    <p class="quote">
		<em>{quote}</em>
	</p>
    <div class="person__container">
        <div class="person__dp"></div>
        <div class="person__details">
            <p>
                <strong>{name}</strong>
            </p>
            <p>{designation}</p>
        </div>
    </div>
    
    
</Card>

<style>
    .quote {
		line-height: 1.5;
		margin-bottom: 0.5em;
        border-bottom: 1px solid var(--color__grey--light);
        padding-bottom: 2em;
        margin-bottom: 2em;
	}
    .person__container {
        display: flex;
        align-items: center;
    }
    .person__dp {
        width: 50px;
        height: 50px;
        margin-right: 1em;
        background: var(--color__grey--lightest);
        border: 1px solid var(--color__grey--light);
        border-radius: 100%;
    }
    
</style>