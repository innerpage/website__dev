---
import Link from "../elements/Link.astro"
import { Vars } from "../../script/vars"
---

<footer>
  <div class="separator separator--first"></div>
  <div class="row">
    <article>
      <label><strong>Resources</strong></label>
      <Link href="/docs/getting-started" target=""> Getting Started </Link><br/>
      <Link href="/docs" target=""> Documentation </Link><br/>
      <Link href="/blog" target=""> Blog </Link>
    </article>
    <article>
      <label><strong>Support</strong></label>
      <Link href="/faq" target=""> FAQ </Link><br/>
      <Link href="https://twitter.com" target="_blank"> Twitter </Link><br/>
      <Link href="/contact-us" target=""> Contact Us </Link><br/>
    </article>
    <article>
      <label><strong>Other links</strong></label>
      <Link href="/terms-of-service" target=""> Terms of Service </Link><br/>
      <Link href="/privacy-policy" target=""> Privacy Policy </Link><br/>
      <Link href="/cancellation-and-refund" target=""> Cancellation & Refund </Link>
    </article>
  </div>
  <div class="separator separator--second"></div>
  <div class="row row--second">
    <p>
      Â© {new Date().getFullYear()}&nbsp;{Vars.product.name}
    </p>
  </div>
</footer>

<style>
    footer {
        padding: calc(var(--site__padding) * 1.2) 0;
    }

    footer img {
      filter: grayscale(1);
      opacity: 0.5;
    }

    footer img:hover {
      opacity: 0.8;
    }

    label {
      display: block;
      color: var(--color__grey--regular);
    }

    .row {
      display: flex;
      justify-content: space-between;
    }

    .row--second {
      justify-content: space-around;
    }

    .separator {
      width: 100%;
      height: 1px;
      background: var(--color__grey--lighter);
    }

    .separator--first {
      margin-bottom: 1.5em;
    }

    .separator--second {
      margin: 1.5em 0;
    }
</style>