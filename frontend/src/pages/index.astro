---
import Site from "../layouts/Site.astro"
import Section from "../components/container/Section.astro"
import Testimonial from "../components/patterns/Testimonial.astro"
import Gallery from "../components/container/Gallery.astro"
import Link from "../components/elements/Link.astro"
import { Var } from "../script/var"
---

<Site title={`${Var.app.name} â€” ${Var.app.tagline}`} description={Var.app.description}>
	<Section>
		<div class="hero">
			<h1>Header: Introduce an epic hook or explain the why? of the product</h1>
			<h2>Sub-header: Explain what? and how? of the product</h2>
			<Link href={Var.app.url} variant="button" fill="outline" theme="default" size="large">Demo</Link>
        	&nbsp;&nbsp;
        	<Link href={Var.app.url} variant="button" fill="solid" theme="default" size="large">Get Started</Link>
		</div>
	</Section>
	<Section>
		<Gallery>
			<Testimonial 
				quote="Lorem Ipsum is simply dummy text of the printing and typesetting industry" 
				name="John Doe" 
				designation="Founder @ Company Name">
			</Testimonial>
			<Testimonial 
				quote="Lorem Ipsum is simply dummy text of the printing and typesetting industry" 
				name="John Doe" 
				designation="Founder @ Company Name">
			</Testimonial>
			<Testimonial 
				quote="Lorem Ipsum is simply dummy text" 
				name="John Doe" 
				designation="Founder @ Company Name">
			</Testimonial>
			<div class="social-proof__logo"></div>
			<div class="social-proof__logo"></div>
			<div class="social-proof__logo"></div>
			<div class="social-proof__logo"></div>
			<div class="social-proof__logo"></div>
			<div class="social-proof__logo"></div>
		</Gallery>
	</Section>
	<Section>
		<h1>Core benefits of using the products (Max. 4 benefits)</h1>
	</Section>
	<Section>
		<h1>Additional benefits of the product (Max. 8 benefits)</h1>
	</Section>
	<Section>
		<h1>Call to action</h1>
	</Section>
</Site>

<style>
	.hero {
		text-align: center;
		max-width: 750px;
		margin: 0 auto;
	}
	.hero h1 {
		font-family: "IBM Plex Serif", serif;
		font-size: 3em;
		line-height: 1.2em;
	}
	.hero h2 {
		margin: 1em 0;
		font-weight: 400;
		font-size: 1.5em;
	}

	.social-proof__logo {
		width: 300px;
		height: 70px;
		background: var(--color__grey--lighter);
		border-radius: var(--border-radius);
	}
</style>
